= form_with model: @article , local: true do |form|
  = form.label t('article.headline')
  %br
  = form.text_area :headline, placeholder: t('article.headline')
  %br
  = form.label t('article.content')
  %br
  = form.text_area :content, placeholder: t('article.content')
  %br
  = form.collection_select :category_id, @categories, :id, :name
  %br
  = form.submit t('article.form_submit')
